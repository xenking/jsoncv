<%
function linkInDiv(url, text, className) {
  if (!url) return ''
  return `<a href="${url}" target="_blank" rel="noopener noreferrer nofollow ugc" class="${className || 'header-link'}"><span class="header-text">${text || fn.noSchemaURL(url)}</span></a>`
}

function formatLocation(loc) {
  if (!loc) return ''
  const items = [loc.city, loc.region, loc.countryCode].filter(Boolean)
  return items.join(', ')
}

function dateRange(item) {
  let {startDate, endDate} = item
  if (!startDate) return ''
  
  const formatDate = (d) => {
    if (/^\d{4}$/.test(d)) return d
    if (/^\d{4}-\d{2}$/.test(d)) return fn.reformatDate(d, 'MMM YYYY')
    return fn.reformatDate(d, 'MMM YYYY')
  }

  const start = formatDate(startDate)
  const end = endDate ? formatDate(endDate) : 'Present'
  
  return `<span>${start} - ${end}</span>`
}
%>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<div class="pdf-page-container">
  <div class="pdf-page">
    
    <header class="pdf-resume-header header-title">
      <div class="header-column">
        <h1 class="header-title-text"><%= cv.basics.name %></h1>
        <div class="header-row">
          <% if (cv.basics.label) { %>
            <div class="header-title-subtext"><%- cv.basics.label.split(' ').join('&nbsp;') %></div>
          <% } %>
          <% if (cv.basics.location) { %>
            <div class="header-title-location"><%= formatLocation(cv.basics.location) %></div>
          <% } %>
        </div>
      </div>
      <div class="header-column">
        <div class="header-row">
          <div class="text-bold">Contacts</div>
          <% if (cv.basics.email) { %>
            <a href="mailto:<%= cv.basics.email %>" class="header-link"><span class="header-text"><%= cv.basics.email %></span></a>
          <% } %>
          <% if (cv.basics.phone) { %>
            <a href="tel:<%= cv.basics.phone %>" class="header-link"><span class="header-text"><%= cv.basics.phone %></span></a>
          <% } %>
          <% if (cv.basics.profiles) { %>
            <% cv.basics.profiles.forEach(function(profile){ %>
              <%- linkInDiv(profile.url, fn.noSchemaURL(profile.url), 'header-link') %>
            <% }) %>
          <% } %>
          <% if (cv.basics.url) { %>
             <%- linkInDiv(cv.basics.url, fn.noSchemaURL(cv.basics.url), 'header-link') %>
          <% } %>
        </div>
      </div>
    </header>

    <div class="pdf-page-column">
      
      <% if (cv.basics.summary && !fn.isHidden('summary')) { %>
      <section class="body-section">
        <div class="body-section-headline">
          <h2 class="body-section-headline-text">Summary</h2>
          <div class="body-section-headline-line"></div>
        </div>
        <div class="body-section-single-container">
          <div class="body-section-single-flex">
            <h2 class="body-section-single-text">
              <%- fn.renderMarkdown(cv.basics.summary).replace(/<p>|<\/p>/g, '') %>
            </h2>
          </div>
        </div>
      </section>
      <% } %>

      <% if (cv.work && cv.work.length && !fn.isHidden('work')) { %>
      <section class="body-section">
        <div class="body-section-headline">
          <h2 class="body-section-headline-text">Experience</h2>
          <div class="body-section-headline-line"></div>
        </div>

        <% cv.work.forEach(function(item) { %>
        <div class="body-section-item">
          <div class="body-section-item-title">
            <h2 class="body-section-item-title-text"><%= item.position %></h2>
            <div class="body-section-item-title-container">
              <h3 class="body-section-item-text">
                at <%= item.name %>
                <% if (item.url) { %>
                  <a href="<%= item.url %>" target="_blank" class="external-link"><%= fn.noSchemaURL(item.url) %></a>
                <% } %>
              </h3>
              <div class="body-section-item-title-date"><%- dateRange(item) %></div>
            </div>
          </div>
          <div>
            <% if (item.summary) { %>
              <div class="body-section-item-description-text"><%- fn.renderMarkdown(item.summary) %></div>
            <% } %>
            <% if (item.highlights && item.highlights.length) { %>
              <ul class="body-section-item-list">
                <% item.highlights.forEach(function(hl) { %>
                  <li class="body-section-item-list-text"><%- fn.renderMarkdown(hl).replace(/<p>|<\/p>/g, '') %></li>
                <% }) %>
              </ul>
            <% } %>
          </div>
        </div>
        <% }) %>
      </section>
      <% } %>

      <% if (cv.education && cv.education.length && !fn.isHidden('education')) { %>
      <section class="body-section">
        <div class="body-section-headline">
          <h2 class="body-section-headline-text">Education</h2>
          <div class="body-section-headline-line"></div>
        </div>
        <% cv.education.forEach(function(item) { %>
        <div class="body-section-item">
          <div class="body-section-item-title">
            <h2 class="body-section-item-title-text"><%= item.institution %></h2>
            <div class="body-section-item-title-container">
              <h3 class="body-section-item-text">
                <% if (item.url) { %>
                  <a href="<%= item.url %>" target="_blank" class="external-link"><%= fn.noSchemaURL(item.url) %></a>
                <% } %>
              </h3>
            </div>
          </div>
          <div class="body-section-item-title">
            <h3 class="body-section-item-text"><%= item.studyType %> in <%= item.area %></h3>
            <div class="body-section-item-title-date"><%- dateRange(item) %></div>
          </div>
          <% if (item.score) { %><div class="body-section-item-description-text">Overall GPA: <%= item.score %></div><% } %>
          <% if (item.courses && item.courses.length) { %><div class="body-section-item-description-text">Courses: <%= item.courses.join('; ') %></div><% } %>
        </div>
        <% }) %>
      </section>
      <% } %>

      <% if (cv.skills && cv.skills.length && !fn.isHidden('skills')) { %>
      <section class="body-list-container">
        <div class="body-section-headline">
          <h2 class="body-section-headline-text">Skills</h2>
          <div class="body-section-headline-line"></div>
        </div>
        <div class="body-list">
          
          <% if (cv.languages && cv.languages.length) { %>
          <div class="body-list-item">
            <div class="body-list-item-title">
              <div class="text-bold">Languages</div>
            </div>
            <div class="body-list-item-text"><%= cv.languages.map(l => `${l.language} - ${l.fluency}`).join(', ') %></div>
          </div>
          <% } %>

          <% cv.skills.forEach(function(skill) { %>
          <div class="body-list-item">
            <div class="body-list-item-title">
              <div class="text-bold"><%= skill.name %></div>
            </div>
            <div class="body-list-item-text"><%= skill.keywords.join(', ') %></div>
          </div>
          <% }) %>

        </div>
      </section>
      <% } %>

      <% if (cv.projects && cv.projects.length && !fn.isHidden('projects')) { %>
      <section class="body-section">
        <div class="body-section-headline">
          <h2 class="body-section-headline-text">Projects</h2>
          <div class="body-section-headline-line"></div>
        </div>
        <% cv.projects.forEach(function(item) { %>
        <div class="body-section-item">
          <div class="body-section-item-title">
            <h2 class="body-section-item-title-text"><%= item.name %></h2>
            <div class="body-section-item-title-container">
              <h3 class="body-section-item-text">
                <% if (item.roles && item.roles.length) { %><%= item.roles.join(', ') %><% } %>
                <% if (item.url) { %>
                  <a href="<%= item.url %>" target="_blank" class="external-link"><%= fn.noSchemaURL(item.url) %></a>
                <% } %>
              </h3>
              <% if (item.startDate) { %><div class="body-section-item-title-date"><%- dateRange(item) %></div><% } %>
            </div>
          </div>
          <div>
            <% if (item.description) { %>
              <h3 class="body-section-item-description-text"><%- fn.renderMarkdown(item.description).replace(/<p>|<\/p>/g, '') %></h3>
            <% } %>
            <% if (item.highlights && item.highlights.length) { %>
              <ul class="body-section-item-list">
                <% item.highlights.forEach(function(hl) { %>
                  <li class="body-section-item-list-text"><%- fn.renderMarkdown(hl).replace(/<p>|<\/p>/g, '') %></li>
                <% }) %>
              </ul>
            <% } %>
            <% if (item.keywords && item.keywords.length) { %>
              <div class="body-section-keywords"><%= item.keywords.join(' · ') %></div>
            <% } %>
          </div>
        </div>
        <% }) %>
      </section>
      <% } %>

      <% if (cv.sideProjects && cv.sideProjects.length && !fn.isHidden('sideProjects')) { %>
      <section class="body-section">
        <div class="body-section-headline">
          <h2 class="body-section-headline-text">Side Projects</h2>
          <div class="body-section-headline-line"></div>
        </div>
        <% cv.sideProjects.forEach(function(item) { %>
        <div class="body-section-item">
          <div class="body-section-item-title">
            <h2 class="body-section-item-title-text"><%= item.name %></h2>
            <div class="body-section-item-title-container">
              <h3 class="body-section-item-text">
                <% if (item.url) { %>
                  <a href="<%= item.url %>" target="_blank" class="external-link"><%= fn.noSchemaURL(item.url) %></a>
                <% } %>
              </h3>
            </div>
          </div>
          <% if (item.description) { %>
            <h3 class="body-section-item-description-text"><%- fn.renderMarkdown(item.description).replace(/<p>|<\/p>/g, '') %></h3>
          <% } %>
          <% if (item.keywords && item.keywords.length) { %>
            <div class="body-section-keywords"><%= item.keywords.join(' · ') %></div>
          <% } %>
        </div>
        <% }) %>
      </section>
      <% } %>

      <% if (cv.awards && cv.awards.length && !fn.isHidden('awards')) { %>
      <section class="body-section">
        <div class="body-section-headline">
          <h2 class="body-section-headline-text">Awards</h2>
          <div class="body-section-headline-line"></div>
        </div>
        <% cv.awards.forEach(function(item) { %>
        <div class="body-section-item">
          <div class="body-section-item-title">
            <h2 class="body-section-item-title-text"><%= item.title %></h2>
            <div class="body-section-item-title-container">
              <h3 class="body-section-item-text"><%= item.awarder %></h3>
              <% if (item.date) { %><div class="body-section-item-title-date"><%= item.date %></div><% } %>
            </div>
          </div>
          <% if (item.summary) { %>
            <div class="body-section-item-description-text"><%- fn.renderMarkdown(item.summary) %></div>
          <% } %>
        </div>
        <% }) %>
      </section>
      <% } %>

      <% if (cv.certificates && cv.certificates.length && !fn.isHidden('certificates')) { %>
      <section class="body-section">
        <div class="body-section-headline">
          <h2 class="body-section-headline-text">Certificates</h2>
          <div class="body-section-headline-line"></div>
        </div>
        <% cv.certificates.forEach(function(item) { %>
        <div class="body-section-item">
          <div class="body-section-item-title">
            <h2 class="body-section-item-title-text"><%= item.name %></h2>
            <div class="body-section-item-title-container">
              <h3 class="body-section-item-text">
                <%= item.issuer %>
                <% if (item.url) { %>
                  <a href="<%= item.url %>" target="_blank" class="external-link"><%= fn.noSchemaURL(item.url) %></a>
                <% } %>
              </h3>
              <% if (item.date) { %><div class="body-section-item-title-date"><%= item.date %></div><% } %>
            </div>
          </div>
        </div>
        <% }) %>
      </section>
      <% } %>

      <% if (cv.volunteer && cv.volunteer.length && !fn.isHidden('volunteer')) { %>
      <section class="body-section">
        <div class="body-section-headline">
          <h2 class="body-section-headline-text">Volunteer</h2>
          <div class="body-section-headline-line"></div>
        </div>
        <% cv.volunteer.forEach(function(item) { %>
        <div class="body-section-item">
          <div class="body-section-item-title">
            <h2 class="body-section-item-title-text"><%= item.position %></h2>
            <div class="body-section-item-title-container">
              <h3 class="body-section-item-text">
                at <%= item.organization %>
                <% if (item.url) { %>
                  <a href="<%= item.url %>" target="_blank" class="external-link"><%= fn.noSchemaURL(item.url) %></a>
                <% } %>
              </h3>
              <div class="body-section-item-title-date"><%- dateRange(item) %></div>
            </div>
          </div>
          <div>
            <% if (item.summary) { %>
              <h3 class="body-section-item-description-text"><%- fn.renderMarkdown(item.summary).replace(/<p>|<\/p>/g, '') %></h3>
            <% } %>
            <% if (item.highlights && item.highlights.length) { %>
              <ul class="body-section-item-list">
                <% item.highlights.forEach(function(hl) { %>
                  <li class="body-section-item-list-text"><%- fn.renderMarkdown(hl).replace(/<p>|<\/p>/g, '') %></li>
                <% }) %>
              </ul>
            <% } %>
          </div>
        </div>
        <% }) %>
      </section>
      <% } %>

      <% if (cv.publications && cv.publications.length && !fn.isHidden('publications')) { %>
      <section class="body-section">
        <div class="body-section-headline">
          <h2 class="body-section-headline-text">Publications</h2>
          <div class="body-section-headline-line"></div>
        </div>
        <% cv.publications.forEach(function(item) { %>
        <div class="body-section-item">
          <div class="body-section-item-title">
            <h2 class="body-section-item-title-text"><%= item.name %></h2>
            <div class="body-section-item-title-container">
              <h3 class="body-section-item-text">
                <%= item.publisher %>
                <% if (item.url) { %>
                  <a href="<%= item.url %>" target="_blank" class="external-link"><%= fn.noSchemaURL(item.url) %></a>
                <% } %>
              </h3>
              <% if (item.releaseDate) { %><div class="body-section-item-title-date"><%= item.releaseDate %></div><% } %>
            </div>
          </div>
          <% if (item.summary) { %>
            <h3 class="body-section-item-description-text"><%- fn.renderMarkdown(item.summary).replace(/<p>|<\/p>/g, '') %></h3>
          <% } %>
        </div>
        <% }) %>
      </section>
      <% } %>

      <% if (cv.references && cv.references.length && !fn.isHidden('references')) { %>
      <section class="body-section">
        <div class="body-section-headline">
          <h2 class="body-section-headline-text">References</h2>
          <div class="body-section-headline-line"></div>
        </div>
        <% cv.references.forEach(function(item) { %>
        <div class="body-section-item">
          <div class="body-section-item-title">
            <h2 class="body-section-item-title-text"><%= item.name %></h2>
            <% if (item.relationship) { %>
              <div class="body-section-item-title-container">
                <h3 class="body-section-item-text"><%= item.relationship %></h3>
              </div>
            <% } %>
          </div>
          <% if (item.reference) { %>
            <div class="body-section-item-description-text"><%- fn.renderMarkdown(item.reference) %></div>
          <% } %>
        </div>
        <% }) %>
      </section>
      <% } %>

      <% if (cv.interests && cv.interests.length && !fn.isHidden('interests')) { %>
      <section class="body-list-container">
        <div class="body-section-headline">
          <h2 class="body-section-headline-text">Interests</h2>
          <div class="body-section-headline-line"></div>
        </div>
        <div class="body-list">
          <% cv.interests.forEach(function(item) { %>
          <div class="body-list-item">
            <div class="body-list-item-title">
              <div class="text-bold"><%= item.name %></div>
            </div>
            <% if (item.keywords && item.keywords.length) { %>
              <div class="body-list-item-text"><%= item.keywords.join(', ') %></div>
            <% } %>
          </div>
          <% }) %>
        </div>
      </section>
      <% } %>

    </div>

    <% if (cv.meta && !fn.isHidden('meta')) { %>
    <footer class="pdf-footer">
      <% 
        const resumeName = cv.meta.name || cv.basics.name || 'Resume';
        const pdfFilename = cv.meta.version ? `${resumeName}-${cv.meta.version}.pdf` : `${resumeName}.pdf`;
      %>
      <% if (!isPreview) { %>
        <a href="/<%= pdfFilename %>" download class="footer-link">Download PDF</a>
        <span class="footer-separator">•</span>
        <a href="https://<%= siteUrl %>" target="_blank" rel="noopener noreferrer" class="footer-link"><%= siteUrl %></a>
        <% if (cv.meta.version || cv.meta.lastModified) { %>
          <span class="footer-separator">•</span>
        <% } %>
      <% } %>
      <% if (cv.meta.version) { %>
        <span class="footer-meta">Version: <%= cv.meta.version %></span>
      <% } %>
      <% if (cv.meta.lastModified) { %>
        <% if (cv.meta.version) { %><span class="footer-separator">•</span><% } %>
        <span class="footer-meta">Last modified: <%= cv.meta.lastModified.slice(0, 10) %></span>
      <% } %>
    </footer>
    <% } %>

  </div>
</div>